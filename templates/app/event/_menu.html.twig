{% set activeClass = 'block py-3 px-4 border-b-2 text-primary-600 hover:text-primary-600 dark:text-primary-500 dark:border-primary-500 border-primary-600' %}
{% set defaultClass = 'block py-3 px-4 text-gray-500 dark:text-gray-400 hover:text-primary-600 hover:border-b-2 dark:hover:text-primary-500 dark:hover:border-primary-500 hover:border-primary-600' %}
{% set routeName = app.request.get('_route') %}

<nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
    <div class="flex justify-between items-center">
        <div class="flex justify-start justify-between items-center">
            <a href="{{ path('app_dashboard') }}" class="flex mr-2">
                <img src="{{ asset('logo.png') }}" class="h-8" alt="Leeco Logo" />
                <span class="ml-3 self-center text-2xl font-semibold whitespace-nowrap dark:text-white">{{ 'common.title'|trans }}</span>
            </a>
            <div class="flex items-center sm:mb-0">
                <button id="dropdownUserNameButton" data-dropdown-toggle="dropdownUserName" data-dropdown-placement="bottom" class="flex justify-between items-center p-2 rounded-lg dark:bg-gray-700 dark:hover:bg-gray-700 hover:bg-gray-100 dark:hover-bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700" type="button">
                    <span class="sr-only">Open user menu</span>
                    <div class="flex items-center mr-2">
                        <div class="text-left">
                            <div class="text-sm font-semibold leading-none text-gray-900 dark:text-white">{{ eventName }}</div>
                        </div>
                    </div>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 16"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5m0 6 4 4 4-4"/></svg>
                </button>
                <!-- Dropdown menu -->
                <div id="dropdownUserName" class="hidden z-10 w-48 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600" data-popper-placement="bottom">
                    <a href="{{ path('app_events_list') }}" class="flex items-center py-3 px-4 rounded hover:bg-gray-50 dark:hover:bg-gray-600">
                        <div class="text-left">
                            <div class="font-medium leading-none text-gray-900 dark:text-white mb-0.5 text-sm">
                                {{ 'event.list.title'|trans }}
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        {% include 'common/menus/_user.html.twig' %}
    </div>
</nav>

