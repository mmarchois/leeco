{% extends 'layout.html.twig' %}

{% block title %}
    {{ event.title }} - {{ parent() }}
{% endblock %}

{% block current_event %}
    {% include 'app/event/_current.html.twig' with { event } only %}
{% endblock %}

{% block main %}
    {% include 'common/breadcrumb.html.twig' with { items: [
        { title: 'event.list.title'|trans, path: path('app_events_list') },
        { title: event.title },
    ] } only %}

    <div class="mb-8 flex items-center justify-between ">
        <div>
            <h1 class="inline-block text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">{{ event.title }}</h1>
            <p class="mt-1 text-lg text-gray-500 dark:text-gray-400">{% include 'app/event/_period.html.twig' with { startDate: event.startDate, endDate: event.endDate } only %}</p>
        </div>
        <div class="flex-shrink-0 flex flex-row items-center justify-end space-x-3">
            <a href="{{ path('app_events_edit', { eventUuid: event.uuid }) }}" class="flex items-center justify-center px-4 py-2 text-sm font-medium text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800">
                <svg class="h-3.5 w-3.5 mr-2 -ml-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
                </svg>
                {{ 'common.edit'|trans }}
            </a>
            <a href="#" class="flex items-center justify-center flex-shrink-0 px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg focus:outline-none hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                <svg class="h-3.5 w-3.5 mr-2 -ml-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linejoin="round" stroke-width="2" d="M4 4h6v6H4V4Zm10 10h6v6h-6v-6Zm0-10h6v6h-6V4Zm-4 10h.01v.01H10V14Zm0 4h.01v.01H10V18Zm-3 2h.01v.01H7V20Zm0-4h.01v.01H7V16Zm-3 2h.01v.01H4V18Zm0-4h.01v.01H4V14Z"/>
                    <path stroke="currentColor" stroke-linejoin="round" stroke-width="2" d="M7 7h.01v.01H7V7Zm10 10h.01v.01H17V17Z"/>
                </svg>
                {{ 'dashboard.download.invitation'|trans }}
            </a>
        </div>
    </div>
    <div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
        <h2 class="mb-4 text-xl font-bold dark:text-white">{{ 'dashboard.participate.how'|trans }}</h2>
        <div class="text-center mt-8 lg:mt-12 space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
            <div>
                <img class="mx-auto mb-4 w-12 h-12 text-primary-600 dark:text-primary-500" src="{{ asset('logo.png') }}" alt="Leeco logo" />
                <h3 class="mb-2 text-xl  font-bold dark:text-white">{{ 'dashboard.participate.install_app'|trans }}</h3>
                <p class="mb-4 text-gray-500 dark:text-gray-400">{{ 'dashboard.participate.download_app'|trans }}</p>
                <div class="flex items-center justify-center gap-4 mt-8 max-w-sm mx-auto">
                    <a href="#" class="inline-flex items-center justify-center w-full px-2 sm:px-4 py-3 text-left text-white bg-gray-800 rounded-lg sm:w-auto hover:bg-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-300">
                        <svg aria-hidden="true" class="h-8 w-8 sm:w-10 sm:h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19.665 16.811a10.316 10.316 0 0 1-1.021 1.837c-.537.767-.978 1.297-1.316 1.592-.525.482-1.089.73-1.692.744-.432 0-.954-.123-1.562-.373-.61-.249-1.17-.371-1.683-.371-.537 0-1.113.122-1.73.371-.616.25-1.114.381-1.495.393-.577.025-1.154-.229-1.729-.764-.367-.32-.826-.87-1.377-1.648-.59-.829-1.075-1.794-1.455-2.891-.407-1.187-.611-2.335-.611-3.447 0-1.273.275-2.372.826-3.292a4.857 4.857 0 0 1 1.73-1.751 4.65 4.65 0 0 1 2.34-.662c.46 0 1.063.142 1.81.422s1.227.422 1.436.422c.158 0 .689-.167 1.593-.498.853-.307 1.573-.434 2.163-.384 1.6.129 2.801.759 3.6 1.895-1.43.867-2.137 2.08-2.123 3.637.012 1.213.453 2.222 1.317 3.023a4.33 4.33 0 0 0 1.315.863c-.106.307-.218.6-.336.882zM15.998 2.38c0 .95-.348 1.838-1.039 2.659-.836.976-1.846 1.541-2.941 1.452a2.955 2.955 0 0 1-.021-.36c0-.913.396-1.889 1.103-2.688.352-.404.8-.741 1.343-1.009.542-.264 1.054-.41 1.536-.435.013.128.019.255.019.381z"></path>
                        </svg>
                        <div class="ml-2.5">
                            <span class="block text-xs font-normal leading-none">{{ 'dashboard.download.on'|trans }}</span>
                            <span class="block text-xs font-bold leading-tight">AppStore</span>
                        </div>
                    </a>
                    <a href="#" class="inline-flex items-center justify-center w-full px-2 sm:px-4 py-3 text-left text-white bg-gray-900 rounded-lg sm:w-auto hover:bg-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-300">
                        <svg aria-hidden="true" class="h-8 w-8 sm:w-10 sm:h-10" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="m12.954 11.616 2.957-2.957L6.36 3.291c-.633-.342-1.226-.39-1.746-.016l8.34 8.341zm3.461 3.462 3.074-1.729c.6-.336.929-.812.929-1.34 0-.527-.329-1.004-.928-1.34l-2.783-1.563-3.133 3.132 2.841 2.84zM4.1 4.002c-.064.197-.1.417-.1.658v14.705c0 .381.084.709.236.97l8.097-8.098L4.1 4.002zm8.854 8.855L4.902 20.91c.154.059.32.09.495.09.312 0 .637-.092.968-.276l9.255-5.197-2.666-2.67z"></path>
                        </svg>
                        <div class="ml-2.5">
                            <span class="block text-xs font-normal leading-none">{{ 'dashboard.download.on'|trans }}</span>
                            <span class="block text-xs font-bold leading-tight">Google Play</span>
                        </div>
                    </a>
                </div>
            </div>
            <div>
                <img class="mx-auto mb-4 w-12 h-12 rounded-lg text-primary-600 dark:text-primary-500" src="{{ asset('images/qrcode.png') }}" alt="qr code" />
                <h3 class="mb-2 text-xl font-bold dark:text-white">{{ 'dashboard.participate.access_to_event'|trans }}</h3>
                <p class="mb-4 text-gray-500 dark:text-gray-400">
                    {{ 'dashboard.participate.access_to_event.description'|trans }}
                </p>
                <div class="text-gray-500 dark:text-gray-400">
                    <span class="block">{{ 'dashboard.participate.access_to_event.code'|trans }}</span>
                    <span class="block font-bold">{{ event.accessCode }}</span>
                </div>
            </div>
            <div>
                <div class="mb-4 relative inline-flex items-center justify-center w-12 h-12 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600">
                    <svg class="font-medium w-9 h-9 text-gray-600 dark:text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M7.5 4.586A2 2 0 0 1 8.914 4h6.172a2 2 0 0 1 1.414.586L17.914 6H19a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h1.086L7.5 4.586ZM10 12a2 2 0 1 1 4 0 2 2 0 0 1-4 0Zm2-4a4 4 0 1 0 0 8 4 4 0 0 0 0-8Z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <h3 class="mb-2 text-xl font-bold dark:text-white">{{ 'dashboard.participate.contribute'|trans }}</h3>
                <p class="mb-4 text-gray-500 dark:text-gray-400">{{ 'dashboard.participate.contribute.description'|trans }}</p>
            </div>
        </div>
    </div>

    <div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
        <h2 class="mb-4 text-xl font-bold dark:text-white">{{ 'event.delete.title'|trans }}</h2>
        {% include 'common/alert/danger.html.twig' with { title: 'event.delete.description'|trans } %}
        <form method="delete" action="{{ path('app_events_delete', { eventUuid: event.uuid }) }}">
            <button type="button" title="{{ 'common.delete'|trans }}" data-modal-target="deleteModal" data-modal-toggle="deleteModal" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">
                {{ 'common.delete'|trans }}
            </button>
            <input type="hidden" name="token" value="{{ csrf_token('delete-event') }}" />
            {% include 'common/modal/delete.html.twig' with { modalId: 'deleteModal', title: 'event.delete.confirm'|trans } %}
        </form>
    </div>
{% endblock main %}
