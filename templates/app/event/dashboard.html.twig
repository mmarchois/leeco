{% extends 'layout.html.twig' %}

{% block title %}
    {{ event.title }} - {{ parent() }}
{% endblock %}

{% block sub_menu %}{% include 'common/event/menu.html.twig' with { uuid: event.uuid } only %}{% endblock %}

{% block main %}
    {% include 'common/breadcrumb.html.twig' with { items: [
        { title: 'event.list.title'|trans, path: path('app_events_list') },
        { title: event.title },
    ] } only %}

    <h1>{{ event.title }}</h1>
    <a href="{{ path('app_events_edit', { uuid: event.uuid }) }}">
        {{ 'common.edit'|trans }}
    </a>
    <form
        method="delete"
        action="{{ path('app_events_delete', { uuid: event.uuid }) }}"
    >
        <button title="{{ 'common.delete'|trans }}">
            {{ 'common.delete'|trans }}
        </button>
        <input type="hidden" name="token" value="{{ csrf_token('delete-event') }}" />
    </form>
    <a href="{{ path('app_participants_list', { uuid: event.uuid }) }}">
        {{ 'participant.list'|trans }}
    </a>
    <a href="{{ path('app_tags_list', { uuid: event.uuid }) }}">
        {{ 'tag.list'|trans }}
    </a>
{% endblock main %}
