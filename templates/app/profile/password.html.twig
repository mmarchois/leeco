{% extends 'layout.html.twig' %}

{% block title %}
    {{ 'profile.password.title'|trans }} - {{ parent() }}
{% endblock %}

{% block main %}
    {% include 'common/breadcrumb.html.twig' with {
        items: [
            { title: 'profile.title'|trans, path: path('app_profile_edit') },
            { title: 'profile.password.title'|trans },
        ]
    } only %}
    <div class="mb-8">
        <h1 class="inline-block text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">{{ 'profile.password.title'|trans }}</h1>
    </div>

    <div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
        {% if app.request.get('success') %}
            {% include 'common/alert/success.html.twig' with { title: 'profile.password.edit.success'|trans } %}
        {% endif %}
        {{ form(form) }}
    </div>
{% endblock main %}
