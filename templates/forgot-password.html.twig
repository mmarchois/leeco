{% extends 'layout.html.twig' %}

{% block title %}
    {{ 'forgot_password.title'|trans }} - {{ parent() }}
{% endblock %}

{% block main %}
<section class="bg-gray-50 dark:bg-gray-900">
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-20 lg:py-16 lg:grid-cols-12">
        <div class="w-full place-self-center lg:col-span-6">
            <div class="p-6 mx-auto bg-white rounded-lg shadow dark:bg-gray-800 sm:max-w-xl sm:p-8">
                <h1 class="mb-2 text-2xl font-bold leading-tight tracking-tight text-gray-900 dark:text-white">
                    {{ 'forgot_password.title'|trans }}
                </h1>
                <p class="text-sm font-light text-gray-500 dark:text-gray-300">
                    {{ 'forgot_password.help'|trans }}
                </p>
                {% if app.request.get('send') %}
                    {% include 'common/alert/success.html.twig' with { title: 'forgot_password.succeeded'|trans } %}
                {% else %}
                    {{ form_start(form, {attr: { class: 'mt-8 space-y-6' }}) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.save) }}
                    {{ form_end(form) }}
                    <p class="mt-4 text-sm font-light text-gray-500 dark:text-gray-300">
                        <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:underline dark:text-primary-500">{{ 'common.go_back'|trans }}</a>
                    </p>
                {% endif %}
            </div>
        </div>
        <div class="mr-auto place-self-center lg:col-span-6">
            <img class="hidden mx-auto lg:flex" src="{{ asset('sign-in.svg')}}" alt="illustration">
        </div>
    </div>
</section>
{% endblock main %}
